<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minHeight="?listPreferredItemHeight"
    >

  <TextView
      android:id="@+id/ingredient_list_item_quantity_text"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:paddingLeft="8dp"
      android:paddingRight="8dp"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintHorizontal_weight="1"
      app:layout_constraintLeft_toLeftOf="parent"
      app:layout_constraintRight_toLeftOf="@id/ingredient_list_item_measure_text"
      app:layout_constraintTop_toTopOf="parent"
      tools:text="quantity"
      />

  <TextView
      android:id="@+id/ingredient_list_item_measure_text"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintHorizontal_weight="1"
      app:layout_constraintLeft_toRightOf="@id/ingredient_list_item_quantity_text"
      app:layout_constraintRight_toLeftOf="@id/ingredient_list_item_name_text"
      app:layout_constraintTop_toTopOf="parent"
      tools:text="measure"
      />

  <TextView
      android:id="@+id/ingredient_list_item_name_text"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintHorizontal_weight="2"
      app:layout_constraintLeft_toRightOf="@id/ingredient_list_item_measure_text"
      app:layout_constraintRight_toRightOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      tools:text="name"
      />

</android.support.constraint.ConstraintLayout>