<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.wsw.bakingapp.ui.StepDetailFragment"
    >

  <ImageView
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:scaleType="centerCrop"
      android:src="@drawable/baking"
      />

  <TextView
      android:id="@+id/step_detail_name_text"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="This is step name"
      />

  <TextView
      android:id="@+id/step_detail_description_txet"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="This is step description"
      />
</LinearLayout>
